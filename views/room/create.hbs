<h1>Create a Room</h1>

<form action="/auth/profile/create" method="POST">

   <label> Name
      <input type="text" name="name">
   </label>
   <label> Description
     <textarea name="description" id="" cols="30" rows="10"></textarea>
   </label>

   <label> Picture
      <input type="text" name="imageUrl">
   </label>

   <button type="submit">Create</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}


</form>

